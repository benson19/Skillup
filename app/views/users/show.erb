<h1> Hi, <%= @user.full_name %> </h1>

<% @user.user_skills.each do |us| %>
    <%= us.skill.name %> 
    <%= us.level %>
<% end %>

<%= link_to "Take on a new project!", projects_path %>

<% @user.user_projects.each do |up| %>
    <% if up.status < 100 %>
        <%= up.project.title %>
        <%= up.status %>
        <%= up.project.pay %>
    <% end %>
<% end %>

<% @user.user_projects.each do |up| %>
    <% if up.status == 100 %>
        <%= up.project.title %>
        <%= up.project.pay %>
    <% end %>
<% end %>



